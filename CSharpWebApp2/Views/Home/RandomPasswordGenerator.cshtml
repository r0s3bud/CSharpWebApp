@{
    ViewBag.Title = "Random Password Generator";
}

<h2 class="text-center">⚠@ViewBag.Title⚠</h2>

<div class="col-md-4">
    <form action="generatePassword" method="get">
        <input type="submit" class="btn btn-primary btn-block" value="Generate random password">
    </form>
</div>

<div class="col-md-4 col-md-offset-4">
    @{
        if (ViewBag.Password != null)
        {
            var FontColor = "black";
            string Password = ViewBag.Password;
            var PasswordChars = Password.ToCharArray();

            for (int i = 0; i < PasswordChars.Length; i++)
            {
                FontColor = "blue";
                if (Char.IsUpper(PasswordChars[i]))
                {
                    FontColor = "green";
                }
                if (Char.IsLower(PasswordChars[i]))
                {
                    FontColor = "pink";
                }
                if (Char.IsDigit(PasswordChars[i]))
                {
                    FontColor = "red";
                }
                <span style="color: @FontColor">@PasswordChars[i]</span>
            }
        }
    }
</div>



